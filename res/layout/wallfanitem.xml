<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:background="#FFFFFFFF">
    <ImageView android:src="@drawable/avatar_1" android:id="@+id/fanimage" android:layout_width="130px" android:layout_height="97px"></ImageView>
    <TextView android:text="TextView" android:layout_height="30dp" android:layout_width="1dp" android:id="@+id/textHiddenMe" android:visibility="gone"></TextView>   
    <TextView android:text="TextView" android:layout_height="30dp" android:layout_width="1dp" android:id="@+id/textUrlImage" android:visibility="gone"></TextView>   
    <TextView android:text="TextView" android:layout_height="30dp" android:layout_width="1dp" android:id="@+id/textClientId" android:visibility="gone"></TextView>   

    <LinearLayout android:paddingLeft="20px" android:id="@+id/linearLayout1" android:orientation="vertical" android:layout_width="match_parent" android:weightSum="1" android:layout_height="60dp">
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:weightSum="1" android:layout_height="30dp">
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout3" android:orientation="vertical" android:weightSum="1" android:layout_height="wrap_content">
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout4" android:layout_height="wrap_content" android:weightSum="1">
                <TextView android:text="picture 1" android:textAppearance="?android:attr/textAppearanceSmall" android:layout_width="wrap_content" android:id="@+id/fanText" android:layout_weight="0.34" android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout5" android:weightSum="1" android:layout_height="wrap_content">
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
