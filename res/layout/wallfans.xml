<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="fill_parent"
    android:layout_width="fill_parent" android:background="@drawable/background">
 
      <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_height="44px"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_bg"      
        android:weightSum="1">
       <!-- 
        <Button android:id="@+id/backBtn" android:layout_marginTop="5px" android:layout_marginBottom="5px"  android:layout_marginLeft="10px" android:background="@drawable/back_btn" android:layout_width="67dp" android:layout_height="match_parent" android:onClick="onBack" android:clickable="true"></Button>
         -->
        <ImageView android:paddingLeft="40px" android:layout_height="wrap_content" android:layout_marginTop="7px" android:layout_marginBottom="7px" android:layout_width="wrap_content" android:layout_gravity="center|center_vertical|center_horizontal" android:src="@drawable/tellfan_logo_h30" android:id="@+id/imageView1" android:layout_weight="0.91"></ImageView>
    	<Button android:id="@+id/homeBtn" android:layout_marginTop="5px" android:layout_marginBottom="5px"  android:layout_marginLeft="10px" android:background="@drawable/home_btn" android:layout_width="67dp" android:layout_height="match_parent" android:onClick="onHome" android:clickable="true"></Button>     	
    </LinearLayout>

     <LinearLayout
        android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" 
    	android:layout_below="@+id/header" 
    	android:layout_above="@+id/footer" 
    	android:weightSum="1"
        android:background="#FFFFFFFF">
         <LinearLayout android:id="@+id/profile" android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="60px" android:background="@drawable/header_bg">
             <ImageView android:src="@drawable/avatar" android:paddingLeft="5px" android:layout_marginTop="5px" android:layout_marginBottom="5px" android:id="@+id/imageView2" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
             <TextView android:text="John Doe" android:textSize="20px" android:paddingLeft="20px" android:id="@+id/profilename"  android:gravity="center|clip_horizontal|clip_vertical|left" android:layout_width="match_parent" android:layout_height="match_parent"></TextView>
         </LinearLayout>
         <LinearLayout android:layout_height="52dp" android:background="#FFFFFFFF" android:layout_width="match_parent" android:gravity="center" android:orientation="horizontal" android:id="@+id/commentlayout">
             <EditText android:text="write comment" android:id="@+id/editText1" android:layout_width="286dp" android:layout_weight="0.50" android:layout_height="wrap_content"></EditText>
             <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/imageView2" android:src="@drawable/plus" android:layout_weight="0.54"></ImageView>
         </LinearLayout>
         <LinearLayout android:layout_width="match_parent" android:id="@+id/linearLayout2" android:orientation="vertical" android:layout_height="match_parent">
          	 <ListView  android:id="@+id/wallfanslist"
        				android:layout_width="fill_parent"
        				android:layout_height="fill_parent" 
        				android:layout_weight="1"/>
         </LinearLayout>
    </LinearLayout>    
