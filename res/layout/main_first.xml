<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_height="fill_parent"
    android:layout_width="fill_parent" android:background="@drawable/background">
 
     <LinearLayout
        android:id="@+id/header"
        android:orientation="horizontal"
        android:layout_height="44px"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/header_bg"      
        android:weightSum="1">
        <Button android:id="@+id/logoutBtn" android:layout_marginTop="5px" android:layout_marginBottom="5px"  android:layout_marginLeft="10px" android:background="@drawable/logout_btn" android:layout_width="67dp" android:layout_height="match_parent"></Button>
        <ImageView android:paddingLeft="40px" android:layout_height="wrap_content" android:layout_marginTop="7px" android:layout_marginBottom="7px" android:layout_width="wrap_content" android:src="@drawable/tellfan_logo_h30" android:id="@+id/imageView1"></ImageView>
    </LinearLayout>
     <LinearLayout
     	android:background="@drawable/header_bg"
        android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" android:layout_below="@+id/header" android:layout_above="@+id/footer" android:weightSum="1">
         <LinearLayout android:id="@+id/profile" android:layout_width="match_parent" android:orientation="horizontal" android:layout_height="60px" android:background="@drawable/header_bg">
             <ImageView android:src="@drawable/avatar" android:paddingLeft="5px" android:layout_marginTop="5px" android:layout_marginBottom="5px" android:id="@+id/imageView2" android:layout_height="wrap_content" android:layout_width="wrap_content"></ImageView>
             <TextView android:text="John Doe" android:textSize="20px" android:paddingLeft="20px" android:id="@+id/profilename"  android:gravity="center|clip_horizontal|clip_vertical|left" android:layout_width="match_parent" android:layout_height="match_parent"></TextView>
         </LinearLayout>
         <LinearLayout android:id="@+id/shoutout" android:layout_width="match_parent" android:orientation="horizontal" android:weightSum="1" android:background="@drawable/header_bg" android:layout_height="60px">
             <ImageView android:id="@+id/imageView3" android:src="@drawable/stub" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
             <TextView android:text="Shoutout" android:paddingLeft="20px" android:textSize="30px" android:id="@+id/textView1" android:layout_height="fill_parent" android:layout_width="match_parent" android:gravity="center|clip_horizontal|clip_vertical|left"></TextView>
         </LinearLayout>
         <LinearLayout android:id="@+id/media" android:layout_width="match_parent" android:orientation="horizontal" android:background="@drawable/header_bg"  android:layout_height="60px">
             <ImageView android:id="@+id/imageView4" android:src="@drawable/stub" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
             <TextView android:text="Media" android:paddingLeft="20px" android:textSize="30px" android:id="@+id/textView2" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center|clip_horizontal|clip_vertical|left"></TextView>
         </LinearLayout>
         <LinearLayout android:id="@+id/fans" android:layout_width="match_parent" android:orientation="horizontal" android:weightSum="1" android:background="@drawable/header_bg"  android:layout_height="60px">
             <ImageView android:id="@+id/imageView5" android:src="@drawable/stub" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
             <TextView android:text="Fans/Celebs" android:paddingLeft="20px" android:textSize="30px" android:id="@+id/textView3"  android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center|clip_horizontal|clip_vertical|left"></TextView>
         </LinearLayout>      
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="49px"
        android:layout_width="fill_parent"
        android:layout_alignParentBottom="true"
        android:background="@drawable/header_bg"
        android:weightSum="1" android:id="@+id/footer">
        <ImageButton android:layout_marginTop="5px" android:layout_marginLeft="10px" android:layout_height="40px" android:layout_width="40px" android:src="@drawable/upload" android:id="@+id/uploadBtn"></ImageButton>
        <ImageButton android:layout_marginTop="5px" android:layout_height="40px" android:layout_width="40px" android:src="@drawable/call0" android:id="@+id/callBtn"></ImageButton>
    </LinearLayout>
 
</RelativeLayout>